@model IEnumerable<Movie>

@{
	ViewData["Title"] = "Movie's List";
}

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-md-4 border-primary  mb-3">
			<div class="card mb-3" style="max-width: 540px;">
				<div class="row g-0">
					<div class="col-md-12 bg-white">
						<a class="float-end"><i class="bi bi-pencil-square"></i></a>
					</div>
					<div class="col-md-6">
						<img src="@item.moviePictureURL" height="340" width="100%" />
					</div>
					<div class="col-md-6">
						<div class="card-body">
							<p class="card-text"><b>Name: </b>@item.movieName</p>
							<p class="card-text"><b>Cinema: </b>@item.Cinema.cinemaName</p>
							<p class="card-text"><b>Category: </b>@item.movieCategory</p>
							<p class="card-text"><b>Start Date: </b>@item.startDate.ToString("dd MMM yyyy")</p>
							<p class="card-text"><b>End Date: </b>@item.endDate.ToString("dd MMM yyyy")</p>
							<p class="card-text"><b>Status: </b>
								@if(DateTime.Now >= item.startDate && DateTime.Now <= item.endDate)
								{
									<span class="badge bg-success text-white">Now Showing</span>
								}
								else if (DateTime.Now > item.endDate)
								{
									<span class="badge bg-danger text-white">Not Available</span>
								}
								else
								{
									<span class="badge bg-primary text-white">Coming Soon</span>
								}
							</p>
						</div>
					</div>
					<div class="col-md-12">
						<div class="card-footer">
							<p class="card-text">
								<a class="btn btn-success text-white"><i class="bi bi-cart-plus-fill"></i> Add to cart (₹ @item.price)</a>
								<a class="btn btn-outline-primary float-end"><i class="bi bi-eye-fill"></i> Show Details</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	}
	
</div>